{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "DatabaseConfig": {
    "Server": "#{DB_SERVER}#",
    "Database": "FicheroNacionalPip2025",
    "IntegratedSecurity": false,
    "Username": "#{DB_USERNAME}#",
    "Password": "#{DB_PASSWORD}#",
    "TrustServerCertificate": true
  },
  "SecuritySettings": {
    "PasswordPolicy": {
      "RequireDigit": true,
      "RequireLowercase": true,
      "RequireUppercase": true,
      "RequireNonAlphanumeric": true,
      "RequiredLength": 8,
      "RequiredUniqueChars": 1,
      "PasswordExpirationDays": 90
    },
    "LockoutSettings": {
      "MaxFailedAccessAttempts": 5,
      "DefaultLockoutTimeSpanMinutes": 30
    }
  },
  "ApplicationSettings": {
    "ApplicationName": "Fichero Nacional PIP 2025",
    "Version": "1.0.0",
    "CompanyName": "Connection Consulting Services, LLC.",
    "SupportEmail": "jlara@ccslpr.com"
  }
} 