<?xml version="1.0" encoding="utf-8"?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:system="clr-namespace:System;assembly=mscorlib">
    <!-- Login Window -->
    <system:String x:Key="Username">Username</system:String>
    <system:String x:Key="Password">Password</system:String>
    <system:String x:Key="LoginButton">LOGIN</system:String>
    <system:String x:Key="LoginError">Invalid username or password</system:String>

    <!-- Main Window -->
    <system:String x:Key="AppTitle">WPF Demo</system:String>
    <system:String x:Key="Home">Home</system:String>
    <system:String x:Key="Users">Users</system:String>
    <system:String x:Key="Data">Data</system:String>
    <system:String x:Key="Reports">Reports</system:String>
    <system:String x:Key="Settings">Settings</system:String>
    <system:String x:Key="Language">Language</system:String>
    <system:String x:Key="Theme">Theme</system:String>
    <system:String x:Key="DarkTheme">Dark</system:String>
    <system:String x:Key="LightTheme">Light</system:String>

    <!-- Messages -->
    <system:String x:Key="Welcome">Welcome to WPF Demo Application!</system:String>
    <system:String x:Key="SaveSuccess">Successfully saved</system:String>
    <system:String x:Key="SaveError">Error saving</system:String>
    <system:String x:Key="DeleteConfirm">Are you sure you want to delete this item?</system:String>
    <system:String x:Key="Yes">Yes</system:String>
    <system:String x:Key="No">No</system:String>
    <system:String x:Key="Cancel">Cancel</system:String>
    <system:String x:Key="Logout">Logout</system:String>

    <system:String x:Key="Save">Save</system:String>
    <system:String x:Key="PasswordVerification">Password verification</system:String>
    <system:String x:Key="NewPassword">New password</system:String>
    <system:String x:Key="ConfirmPassword">Confirm Password</system:String>
    <system:String x:Key="SelectAddUser">Select or add a user</system:String>
    <system:String x:Key="AddUser">Add user</system:String>
    <system:String x:Key="ChangePassword">Change Password</system:String>
    <system:String x:Key="EditUser">Edit user</system:String>
    <system:String x:Key="DeleteUser">Delete user</system:String>

</ResourceDictionary>