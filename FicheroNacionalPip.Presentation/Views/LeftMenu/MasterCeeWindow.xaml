<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:leftMenu="clr-namespace:FicheroNacionalPip.Presentation.ViewModels.LeftMenu"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" 
             x:Class="FicheroNacionalPip.Presentation.Views.LeftMenu.MasterCeeWindow"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance IsDesignTimeCreatable=True, Type={x:Type leftMenu:MasterCeeViewModel}}" d:DesignWidth="1150" d:DesignHeight="800" >


    <Grid Cursor="Hand" Background="Transparent" >
        <Border BorderBrush="Green" CornerRadius="2" BorderThickness="1"  Background="#FFD9E1F1" Height="45" VerticalAlignment="Top">
            <TextBlock Text="{Binding MyTitle}"  FontWeight="Bold" FontSize="24" Foreground="Black"  TextAlignment="Center" />
        </Border>
        <Grid>
            <Border BorderBrush= "Green" CornerRadius="5" BorderThickness="1"  Background="White" Margin="10,54,267,0" Height="204" VerticalAlignment="Top" >

                <Grid Background="Beige" Margin="10,10,7,13">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="145*"/>
                        <ColumnDefinition Width="286*"/>
                        <ColumnDefinition Width="160*"/>
                        <ColumnDefinition Width="216*"/>
                        <ColumnDefinition Width="47*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Row="0" TextWrapping="Wrap" Text="Número electoral"    Margin="0,18,3,0"  Foreground="Black" Height="22" VerticalAlignment="Top" FontWeight="Bold" HorizontalAlignment="Right" Width="122" />
                    <TextBlock Grid.Row="0"  TextWrapping="Wrap" Text="Apellido paterno"    Margin="0,40,3,0"  Foreground="Black" Height="22" VerticalAlignment="Top" FontWeight="Bold" HorizontalAlignment="Right" Width="122"  />
                    <TextBlock  Grid.Row="0" TextWrapping="Wrap" Text="Apellido materno"    Margin="0,63,3,0"  Foreground="Black" Height="22" VerticalAlignment="Top" FontWeight="Bold" HorizontalAlignment="Right" Width="122" />
                    <TextBlock Grid.Row="0" TextWrapping="Wrap" Text="Nombre del elector"  Margin="0,85,3,0"  Foreground="Black" Height="22" VerticalAlignment="Top" FontWeight="Bold" HorizontalAlignment="Right" Width="122" />
                    <TextBlock Grid.Row="0" TextWrapping="Wrap" Text="Nombre del padre"    Margin="0,109,3,0" Foreground="Black" Height="22" VerticalAlignment="Top" FontWeight="Bold" HorizontalAlignment="Right" Width="122" />
                    <TextBlock Grid.Row="0" TextWrapping="Wrap" Text="Nombre de la madre"  Margin="0,136,3,0" Foreground="Black" Height="22" VerticalAlignment="Top" FontWeight="Bold" HorizontalAlignment="Right" Width="122" />
                    <TextBlock Grid.Row="0" Grid.Column="2" TextWrapping="Wrap" Text="Fecha de nacimiento"  Margin="0,18,24,0" Foreground="Black" Height="22" VerticalAlignment="Top" FontWeight="Bold" HorizontalAlignment="Right" Width="128" />
                    <TextBlock Grid.Row="0" Grid.Column="2" TextWrapping="Wrap" Text="Lugar de nacimiento"  Margin="0,40,24,0" Foreground="Black" Height="22" VerticalAlignment="Top" FontWeight="Bold" HorizontalAlignment="Right" Width="128" />
                    <TextBlock Grid.Row="0" Grid.Column="2" TextWrapping="Wrap" Text="Licencia de conducir"  Margin="0,63,24,0" Foreground="Black" Height="22" VerticalAlignment="Top" FontWeight="Bold" HorizontalAlignment="Right" Width="128" />
                    <TextBlock Grid.Row="0" Grid.Column="2" TextWrapping="Wrap" Text="Núm.seguro social"  Margin="0,85,24,0" Foreground="Black" Height="22" VerticalAlignment="Top" FontWeight="Bold" HorizontalAlignment="Right" Width="128" />
                    <TextBlock Grid.Row="0" Grid.Column="2" TextWrapping="Wrap" Text="Precinto"  Margin="0,109,24,0" Foreground="Black" Height="22" VerticalAlignment="Top" FontWeight="Bold" HorizontalAlignment="Right" Width="128" />
                    <TextBlock Grid.Row="0" Grid.Column="2" TextWrapping="Wrap" Text="Unidad electoral"  Margin="0,136,24,0" Foreground="Black" Height="22" VerticalAlignment="Top" FontWeight="Bold" HorizontalAlignment="Right" Width="128" />
                    <TextBox Grid.Row="0" Grid.Column="1" HorizontalAlignment="Left" Margin="10,18,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="203" Height="18"/>
                    <TextBox Grid.Row="0" Grid.Column="1" HorizontalAlignment="Left" Margin="10,40,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="203" Height="18"/>
                    <TextBox Grid.Row="0" Grid.Column="1" HorizontalAlignment="Left" Margin="10,63,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="203" Height="18"/>
                    <TextBox Grid.Row="0" Grid.Column="1" HorizontalAlignment="Left" Margin="10,85,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="203" Height="18"/>
                    <TextBox Grid.Row="0" Grid.Column="1" HorizontalAlignment="Left" Margin="10,109,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="203" Height="18"/>
                    <TextBox Grid.Column="1" HorizontalAlignment="Left" Margin="10,136,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="203" Height="18"/>
                    <TextBox Grid.Row="0" Grid.Column="3" HorizontalAlignment="Center" Margin="0,63,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="202" Height="18"/>
                    <TextBox Grid.Row="0" Grid.Column="3" HorizontalAlignment="Center" Margin="0,85,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="202" Height="18"/>
                    <ComboBox Grid.Column="3" HorizontalAlignment="Center" Margin="0,18,0,0" VerticalAlignment="Top" Width="202" Height="18"/>
                    <ComboBox Grid.Column="3" HorizontalAlignment="Center" Margin="0,42,0,0" VerticalAlignment="Top" Width="202" Height="18"/>
                    <ComboBox Grid.Column="3" HorizontalAlignment="Center" Margin="0,109,0,0" VerticalAlignment="Top" Width="202" Height="18"/>
                    <ComboBox Grid.Column="3" HorizontalAlignment="Center" Margin="0,136,0,0" VerticalAlignment="Top" Width="202" Height="18"/>
                </Grid>
            </Border>
            <Border BorderBrush="Green" CornerRadius="5" BorderThickness="1" Background="White" Margin="0,54,14,0" Height="204" VerticalAlignment="Top" HorizontalAlignment="Right" Width="248">
                <Grid Background="Beige" Margin="10"></Grid>
            </Border>
            <Border BorderBrush="Green" CornerRadius="5" BorderThickness="1" Background="White" Margin="10,263,14,10">
                <Grid Background="Beige" Margin="10" ></Grid>
            </Border>

        </Grid>

    </Grid>


</UserControl>